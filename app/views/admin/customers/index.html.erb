<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2>会員一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th>会員ネーム</th>
              <th></th>
              <th>退会ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= image_tag customer.get_profile_image(40,40) %></td>
              <td><%= customer.name %></td>
              <td><%= link_to "詳細", admin_customer_path(customer.id) %></td>
              <td><%= customer.is_deleted ? "退会" :  "有効" %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</main>