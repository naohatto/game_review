<main>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <div class="col-md-8 offset-md-1">
        <h2>Customers</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
            <tr>
              <td><%= image_tag customer.get_profile_image(40,40) %></td>
              <td><%= customer.name %></td>
              <td><%= link_to "Show", admin_customer_path(customer.id) %></td>
              <td>
                <% if customer.is_deleted %>
                  <%= link_to "退会", admin_customers_path(customer.id, post: {is_deleted: true}), method: :put, class: 'btn btn-success' %>
                <% else %>
                  <%= link_to "有効", admin_customers_path(customer.id, post: {is_deleted: false}), method: :put, class: 'btn btn-outline-secondary ' %>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @customers %>
      </div>
    </div>
  </div>
</main>