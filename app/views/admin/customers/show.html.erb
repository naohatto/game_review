<main>
  <%= flash[:login] %>
  <%= flash[:updateu] %>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <%#= render 'layouts/customerinfo', ipost: @post, customer: @customer %>
      <div class="col-md-8 offset-md-1">
        <h2>Reviews</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Review</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |cpost| %>
            <tr>
              <td>
                <%= link_to admin_customer_path(cpost.customer.id) do %>
                  <%= image_tag cpost.customer.get_profile_image(40,40) %></p>
                <% end %>
              </td>
              <td>
                <%= link_to admin_post_path(cpost.id) do %>
                  <%= cpost.title %>
                <% end %>
              </td>
              <td>
                <%= cpost.body %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <%= paginate @posts %>
      </div>

    </div>
  </div>
</main>