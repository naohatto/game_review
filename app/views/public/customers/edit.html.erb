<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h3>会員情報編集</h3>
        <%= form_with model: @customer, url: customer_path do |f| %>
          <div class="form-group mr-3">氏名<%= f.text_field :name %></div>
          <div class="form-group mr-3">メールアドレス<%= f.text_field :email %></div>
          <div class="form-group mr-3"><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
          <div class="form-group mr-3"><%= f.submit "編集内容を保存", class: "btn btn-primary" %></div>
          <div class="btn btn-danger"><%= link_to "退会する", customers_unsubscribe_path %></div>
        <% end %>
      </div>
    </div>
  </div>
</main>