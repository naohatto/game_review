<main>
  <%= flash[:create] %>
  <%= flash[:updateb] %>
  <div class="container">
    <div class="row">
      <%= render 'layouts/customerinfo', ipost: @post, customer: @customer %>
      <div class="col-md-8 offset-md-1">
        <h2>Review detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to customer_path(@post.customer.id) do %>
                  <%= image_tag @post.customer.get_profile_image(100,100) %></p>
                  <%= @post.customer.name %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path(@post) do %>
                  <%= @post.title %>
                <% end %>
              </td>
              <td>
                <%= @post.body %>
              </td>
              <td>
                <div id="star-rate-<%= @post.id %>"></div>
                  <script>
                  $('#star-rate-<%= @post.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: <%= @post.rate %>,
                  });
                  </script>
              </td>
              <% if @post.customer == current_customer %>
              <td><div class="btn btn-success"><%= link_to "Edit", edit_post_path(@post.id.to_s) %></div></td>
              <td><div class="btn btn-danger"><%= link_to "Destroy", post_path(@post), method: :delete %></div></td>
              <% end %>
            </tr>
          </tbody>
        </table>
      </div>
      <div class="col-md-8 offset-md-1">
        <p>コメント件数：<%= @post.post_comments.count %></p>
        <% @post.post_comments.each do |post_comment| %>
          <p><%= image_tag post_comment.customer.get_profile_image(100,100) %></p>
          <%= post_comment.customer.name %>
          <%= post_comment.created_at.strftime('%Y/%m/%d') %><%= post_comment.body %>
          <% if post_comment.customer == current_customer %>
            <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete %>
          <% end %>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@post, @post_comment] do |f| %>
          <%= f.text_area :body, rows: '5', placeholder: "コメントをここに" %>
          <%= f.submit "送信する" %>
        <% end %>
      </div>
    </div>
  </div>
</main>