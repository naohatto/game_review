<main>
  <div class="container">
    <div class="row">
      <div class="col">
      <%= form_with model: @post do |f| %>
        <div class="form-group">
          <label for="post_title">タイトル</label>
          <%= f.text_field :title, placeholder: "タイトル", class: 'form-control title' %>
        </div>
        <div class="form-group">
          <label for="post_review">レビュー</label>
          <%= f.text_area :body, placeholder: "レビュー内容", class: 'form-control review' %>
        </div>
        評価
        <div class="form-group row" id="star">
          <label for="post_rate">評価</label>
          <%= f.hidden_field :rate, id: :review_star %>
        </div>

        <!-- 評価javascript -->
        <script>
        $('#star').empty();
        $('#star').raty({
          size     : 36,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'post[rate]',
          half: true,
        });
        </script>

        <div class="form-group">
          <label for="item_genre">ジャンル</label>
          <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
        </div>
        <%= f.submit 'Create Review' %>
      <% end %>
      </div>

    </div>
  </div>
</main>