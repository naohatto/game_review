<h1>Editing Review</h1>

<%= form_with model: @post, url: update_post_path(@post.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Review</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Review' %>

<% end %>
<%= link_to "Show", post_path(@post.id) %>
