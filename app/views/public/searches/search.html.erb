<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがUserの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td>
            <%= link_to customer_path(customer.id) do %>
              <%= customer.name %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがCustomerではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |spost| %>
        <tr>
          <td>
            <%= link_to customer_path(spost.customer.id) do %>
              <%= spost.customer.name %>
            <% end %>
          </td>
          <td>
            <%= link_to post_path(spost.id) do %>
              <%= spost.title %>
            <% end %>
          </td>
          <td><%= spost.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>